@model ProfilViewModel

<style>
    .profile-container {
        max-width: 800px;
        margin: 0 auto;
        background: rgba(42, 67, 101, 0.3);
        border-radius: 16px;
        backdrop-filter: blur(10px);
        border: 0px solid rgba(255, 255, 255, 0.1);
        overflow: hidden;
    }

    .profile-content {
        padding: 30px;
    }

    .profile-info {
        display: grid;
        gap: 20px;
    }

    .info-row {
        display: flex;
        align-items: center;
        padding: 18px 20px;
        background: rgba(42, 67, 101, 0.4);
        border-radius: 12px;
        border: 1px solid rgba(255,255,255,0.05);
        transition: all 0.3s ease;
    }

        .info-row:hover {
            background: rgba(42,67,101,0.6);
            border-color: rgba(79,172,254,0.3);
            transform: translateY(-2px);
        }

    .info-label {
        font-size: 14px;
        color: #8bb8e8;
        min-width: 100px;
        font-weight: 500;
    }

    .info-value {
        font-size: 16px;
        color: #fff;
        font-weight: 400;
        flex: 1;
        margin-left: 20px;
    }

    .status-badge {
        display: inline-flex;
        align-items: center;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        background: linear-gradient(45deg, #4facfe, #00f2fe);
        color: white;
        gap: 6px;
    }

    .btn-group {
        display: flex;
        flex-direction: column;
        gap: 13px;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid rgba(255,255,255,0.1);
    }

    /* --- BUTONLAR --- */
    .btn-profil {
        width: 100%;
        padding: 0.85em 0;
        border-radius: 12px !important;
        font-size: 1.08rem;
        font-weight: 600;
        margin: 0;
        box-shadow: none;
        border: 2px solid transparent;
        transition: all 0.16s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.6rem;
        letter-spacing: 0.01em;
    }

    .btn-profil-primary {
        background: #3f68f9;
        color: #fff;
        border: 2px solid #3f68f9;
    }

        .btn-profil-primary:hover {
            background: #2238a8;
            border-color: #2238a8;
            color: #fff;
            transform: translateY(-1px) scale(1.01);
        }

    .btn-profil-outline {
        background: transparent;
        color: #fff;
        border: 2px solid #fff;
    }

        .btn-profil-outline:hover {
            background: rgba(255,255,255,0.08);
            color: #fff;
            border-color: #fff;
            transform: scale(1.03);
        }

    /* --- INPUTLAR --- */
    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-size: 14px;
        font-weight: 500;
        color: #8bb8e8;
        margin-bottom: 8px;
    }

    .form-control {
        background: rgba(19, 42, 80, 0.95);
        border: 2px solid #3f68f9;
        border-radius: 12px;
        color: #fff;
        font-size: 1.07rem;
        padding: 1.1em 1.15em;
        margin-bottom: 0.55rem;
        width: 100%;
        transition: border 0.18s, box-shadow 0.16s;
    }

        .form-control:focus {
            outline: none;
            border-color: #3f68f9;
            background: #253a61;  
            color: #fff;  
            box-shadow: 0 0 0 2px #3f68f977;
        }

        .form-control::placeholder {
            color: #bbb;
            opacity: 0.8;
        }

        .form-control:focus::placeholder {
            color: #e0e7ff;
            opacity: 0.75;
        }


    .edit-form {
        display: none;
        animation: slideIn 0.3s ease;
    }

        .edit-form.show {
            display: block;
        }
    @@keyframes slideIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .loading {
        opacity: 0.7;
        pointer-events: none;
    }

    .spinner {
        animation: spin 1s linear infinite;
    }
    @@keyframes spin {
        0%

    {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

    }

    .d-none {
        display: none !important;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .form-group.full-width {
        grid-column: 1 / -1;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .profile-container

    {
        margin: 10px;
        border-radius: 12px;
    }

    .profile-content {
        padding: 20px;
    }

    .info-row {
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
    }

    .info-label {
        min-width: auto;
    }

    .info-value {
        margin-left: 0;
    }

    .btn-group {
        flex-direction: column;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    .form-grid {
        grid-template-columns: 1fr;
    }

    }
    /* Toastr custom renk */
    .toast-success {
        background: linear-gradient(90deg,#ffe259,#ffa751 80%) !important;
        color: #2c2c2c !important;
        font-weight: 600;
    }

    .toast-error {
        background: linear-gradient(90deg,#f85032,#e73827 80%) !important;
        color: #fff !important;
        font-weight: 600;
    }
</style>

<div class="profile-container" style="background-color:transparent">
    <h2 class="mb-4" style="font-weight:700; color:#fff;">
        <i class="fas fa-box me-2"></i> Profilim
    </h2>
    <div class="profile-content">
        <div id="profile-view" class="profile-info">
            <div class="info-row">
                <div class="info-label">Adı</div>
                <div class="info-value" id="user-name">@Model.Ad</div>
            </div>
            <div class="info-row">
                <div class="info-label">Soyadı</div>
                <div class="info-value" id="user-surname">@Model.Soyad</div>
            </div>
            <div class="info-row">
                <div class="info-label">E-posta</div>
                <div class="info-value" id="user-email">@Model.Email</div>
            </div>
            <div class="info-row">
                <div class="info-label">Telefon</div>
                <div class="info-value" id="user-phone">@Model.PhoneNumber</div>
            </div>            
            <div class="btn-group">
                <button id="btnProfilDuzenle" class="btn btn-profil btn-profil-outline">
                    <i class="fas fa-pen"></i> Düzenle
                </button>
            </div>
        </div>
        <form id="profile-edit-form" class="edit-form" asp-antiforgery="true">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-grid">
                <div class="form-group">
                    <label class="form-label">Adı</label>
                    <input type="text" class="form-control" name="Ad" id="edit-name" value="@Model.Ad" required placeholder="Adınızı giriniz" maxlength="40" />
                </div>
                <div class="form-group">
                    <label class="form-label">Soyadı</label>
                    <input type="text" class="form-control" name="Soyad" id="edit-surname" value="@Model.Soyad" required placeholder="Soyadınızı giriniz" maxlength="40" />
                </div>
                <div class="form-group full-width">
                    <label class="form-label">E-posta</label>
                    <input type="email" class="form-control" name="Email" id="edit-email" value="@Model.Email" required placeholder="E-posta adresinizi giriniz" />
                </div>
                <div class="form-group full-width">
                    <label class="form-label">Telefon</label>
                    <input type="tel" class="form-control" name="PhoneNumber" id="edit-phone" value="@Model.PhoneNumber" placeholder="Telefon numaranızı giriniz" />
                </div>
            </div>
            <div class="btn-group">
                <button type="button" class="btn btn-profil btn-profil-primary" id="btnVazgec">
                    <i class="fas fa-times"></i> Vazgeç
                </button>
                <button type="submit" class="btn btn-profil btn-profil-outline" id="btnKaydet">
                    <i class="fas fa-save"></i> Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    $(function() {
        toastr.options = {
            "closeButton": true,
            "debug": false,
            "newestOnTop": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "preventDuplicates": true,
            "showDuration": "300",
            "hideDuration": "1000",
            "timeOut": "3500",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        };
        $('#btnProfilDuzenle').click(function() {
            $('#profile-view').hide();
            $('#profile-edit-form').addClass('show');
        });
        $('#btnVazgec').click(function() {
            $('#profile-edit-form').removeClass('show');
            $('#profile-view').show();
        });
        $('#profile-edit-form').on('submit', function(e) {
            e.preventDefault();
            var form = $(this);
            var formData = form.serialize();
            var btn = $('#btnKaydet');
            var originalHtml = btn.html();

            btn.html('<i class="fas fa-spinner spinner"></i> Kaydediliyor...').addClass('loading').prop('disabled', true);

            $.ajax({
                url: '/KullaniciPaneli/ProfilGuncelle',
                method: 'POST',
                data: formData,
                success: function(resp) {
                    btn.html(originalHtml).removeClass('loading').prop('disabled', false);
                    if(resp.success) {
                        toastr.success(resp.message);
                        if(resp.reload) {
                            setTimeout(function() {
                                location.reload();
                            }, 1500);
                        } else {
                            reloadProfil();
                        }
                    } else {
                        toastr.error(resp.message);
                    }
                },
                error: function() {
                    btn.html(originalHtml).removeClass('loading').prop('disabled', false);
                    toastr.error('Bir hata oluştu.');
                }
            });
        });
        window.reloadProfil = function() {
            $.get('/KullaniciPaneli/Profil', function(html) {
                $('#panel-main-content').html(html);
            });
        }
    });
</script>
