@model List<KayipEsyaPlatformu.Models.Esya>

<style>
    .main-area {
        background: rgba(16, 31, 52, 0.87);
        min-height: 100vh;
        padding: 2rem 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .esya-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 2rem;
        width: 100%;
        max-width: 1400px;
        margin: 0 auto;
    }

    .esya-card {
        background: linear-gradient(135deg, #253a61 80%, #112d4a 100%);
        border-radius: 2rem;
        box-shadow: 0 10px 30px rgba(31,63,140,0.16);
        color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        min-height: 340px;
        position: relative;
        padding: 2.2rem 1.6rem 1.4rem 1.6rem;
        transition: box-shadow 0.18s, transform 0.14s;
        border: 1.5px solid #233563;
    }

        .esya-card:hover {
            box-shadow: 0 24px 48px rgba(63,104,249,0.18);
            transform: translateY(-7px) scale(1.016);
            border-color: #3f68f9;
        }

    .esya-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        margin-bottom: 1.3rem;
    }

    .esya-title {
        font-size: clamp(1rem, 2.5vw, 1.16rem);
        font-weight: 700;
        margin-bottom: 0.48rem;
        word-break: break-word;
        line-height: 1.24;
        color: #f7f8fa;
        min-height: 2.4em;
    }

    .esya-date {
        font-size: clamp(0.9rem, 2.2vw, 1.05rem);
        color: #b8cbfa;
        margin-bottom: 0.55rem;
        font-weight: 500;
    }

    .esya-status {
        margin-bottom: 1.5rem;
    }

        .esya-status strong {
            font-weight: 700;
            margin-right: 4px;
            font-size: clamp(0.9rem, 2.2vw, 1rem);
        }

        .esya-status .badge {
            font-size: clamp(0.85rem, 2vw, 0.99rem);
            padding: 0.59em 1.18em;
            border-radius: 1.3rem;
            font-weight: 600;
            letter-spacing: 0.2px;
            background: #e13a3a;
            display: inline-block;
        }

        .esya-status .bg-success {
            background: #37b84a !important;
        }

        .esya-status .bg-secondary {
            background: #949ca7 !important;
        }

    .item-actions {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: auto;
    }

    .btn-esya-edit, .btn-esya-sil, .btn-esya-detail {
        width: 100%;
        justify-content: center;
        border-radius: 0.5rem !important;
        font-size: clamp(0.85rem, 2vw, 1rem);
        font-weight: 600;
        padding: 0.85em 0;
        margin: 0;
        box-shadow: none;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
    }  
            
    .btn-esya-detail {
        border: 1px solid white;
        color: white;
        transition: background-color 0.3s;
        font-size: 0.9rem;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-esya-detail:hover {
            background: rgba(255, 255, 255, 0.1);
            color: white;
            text-decoration: none;
        }

    .btn-esya-edit {
        background: #3f68f9;
        color: #fff;
    }

        .btn-esya-edit:hover {
            background: #2238a8;
            color: #fff;
        }

    .btn-esya-sil {
        background: #e13a3a;
        color: #fff;
    }

        .btn-esya-sil:hover {
            background: #ba2525;
            color: #fff;
        }

    /* Container responsive padding */
    .container {
        padding: 0 1rem;
    }

    /* Tablet ve büyük mobil cihazlar */
    @@media (max-width: 1024px) {
        .esya-row

    {
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 1.5rem;
    }

    .main-area {
        padding: 1.5rem 0.5rem;
    }

    }

    /* Mobil cihazlar */
    @@media (max-width: 768px) {
        .esya-row

    {
        grid-template-columns: 1fr;
        gap: 1.2rem;
        max-width: 500px;
    }

    .esya-card {
        border-radius: 1.5rem;
        padding: 1.8rem 1.4rem 1.2rem 1.4rem;
        min-height: 300px;
    }

    .main-area {
        padding: 1rem 0.5rem;
    }

    }

    /* Küçük mobil cihazlar */
    @@media (max-width: 480px) {
        .esya-row

    {
        max-width: 100%;
        padding: 0 0.5rem;
    }

    .esya-card {
        border-radius: 1.2rem;
        padding: 1.5rem 1.2rem 1rem 1.2rem;
        min-height: 280px;
    }

    .btn-esya-edit, .btn-esya-sil, .btn-esya-detail {
        border-radius: 0.9rem !important;
        padding: 0.75em 0;
    }

    .main-area {
        padding: 0.8rem 0.25rem;
    }

    }

    /* Çok küçük ekranlar */
    @@media (max-width: 360px) {
        .esya-card

    {
        border-radius: 1rem;
        padding: 1.2rem 1rem 0.8rem 1rem;
        min-height: 260px;
    }

    .btn-esya-edit, .btn-esya-sil, .btn-esya-detail {
        border-radius: 0.7rem !important;
        padding: 0.65em 0;
    }

    }

    /* Header styling */
    h2 {
        font-weight: 700;
        color: #fff;
        margin-bottom: 1.5rem;
        font-size: clamp(1.3rem, 4vw, 2rem);
    }

    .alert {
        background: rgba(255, 193, 7, 0.1);
        border: 1px solid rgba(255, 193, 7, 0.3);
        color: #ffc107;
        padding: 1rem;
        border-radius: 0.5rem;
        max-width: 600px;
        margin: 0 auto;
    }
</style>

<div class="main-area" style="background-color:transparent">
    <div class="container py-3">
        <h2 class="mb-4" style="font-weight:700; color:#fff;">
            <i class="fas fa-box me-2"></i> Eşyalarım
        </h2>
        @if (Model == null || !Model.Any())
        {
            <div class="alert alert-warning">
                <i class="fas fa-info-circle me-2"></i>
                Henüz hiç eşya ilanınız bulunmamaktadır.
            </div>
        }
        else
        {
            <div class="esya-row">
                @foreach (var esya in Model)
                {
                    <div class="esya-card">
                        <div class="esya-content">
                            <div class="esya-title">                                
                                @esya.Baslik.ToUpper()
                            </div>
                            <div class="esya-date">
                                <i class="fas fa-calendar-alt me-1"></i>
                                @esya.Tarih.ToString("dd.MM.yyyy")
                            </div>
                            <div class="esya-status">
                                <strong>Durum:</strong>
                                <span class="badge
                                    @(esya.Durum?.Ad?.ToLower() == "bulundu" ? "bg-success"
                                        : esya.Durum?.Ad?.ToLower() == "kayip" ? "bg-secondary"
                                        : "bg-danger")">
                                    @(esya.Durum?.Ad?.Split(' ').FirstOrDefault() ?? "Bilinmiyor")
                                </span>
                            </div>
                        </div>
                        <div class="item-actions">
                            <a class="btn btn-esya-detail" asp-controller="Esya" asp-action="Detay" asp-route-id="@esya.Id" target="_blank">
                                <i class="fas fa-eye"></i> Detay
                            </a>
                            <button class="btn btn-esya-edit btnEsyaEdit" data-id="@esya.Id">
                                <i class="fas fa-pen"></i> Düzenle
                            </button>
                            <button class="btn btn-esya-sil btnEsyaSil" data-id="@esya.Id">
                                <i class="fas fa-trash"></i> Sil
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="esyaEditModal" tabindex="-1" aria-labelledby="esyaEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content" id="modalEsyaEditContent">
            <!-- AJAX ile içerik yüklenecek -->
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };

        // Silme
        $(document).off('click', '.btnEsyaSil').on('click', '.btnEsyaSil', function (e) {
            e.preventDefault();
            if (!confirm('Bu ilanı silmek istediğinize emin misiniz?')) return;
            let id = $(this).data('id');
            let btn = $(this);
            btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Siliniyor...');
            $.ajax({
                url: '/KullaniciPaneli/EsyaSil',
                type: 'POST',
                data: { id: id },
                success: function() {
                    toastr.success("İlan başarıyla silindi.");
                    setTimeout(() => reloadEsyalarim(), 1000);
                },
                error: function() {
                    toastr.error("Silme işlemi başarısız. Lütfen tekrar deneyin.");
                    btn.prop('disabled', false).html('<i class="fas fa-trash"></i> Sil');
                }
            });
        });

        // Düzenle
        $(document).off('click', '.btnEsyaEdit').on('click', '.btnEsyaEdit', function (e) {
            e.preventDefault();
            let id = $(this).data('id');
            let btn = $(this);
            btn.prop('disabled', true).html('<i class="fas fa-spinner fa-spin"></i> Yükleniyor...');
            $.ajax({
                url: '/KullaniciPaneli/EsyaDuzenle',
                type: 'GET',
                data: { id: id },
                success: function(formHtml) {
                    $('#modalEsyaEditContent').html(formHtml);
                    let modal = new bootstrap.Modal($('#esyaEditModal')[0]);
                    modal.show();
                    btn.prop('disabled', false).html('<i class="fas fa-pen"></i> Düzenle');
                },
                error: function() {
                    toastr.error("Form yüklenemedi. Lütfen tekrar deneyin.");
                    btn.prop('disabled', false).html('<i class="fas fa-pen"></i> Düzenle');
                }
            });
        });

        // Modal temizliği
        $('#esyaEditModal').on('hidden.bs.modal', function () {
            $('#modalEsyaEditContent').html('');
        });
    });

    function reloadEsyalarim() {
        $.ajax({
            url: '/KullaniciPaneli/Esyalarim',
            type: 'GET',
            success: function(html) {
                $('#panel-main-content').html(html);
            },
            error: function() {
                location.reload();
            }
        });
    }
</script>
